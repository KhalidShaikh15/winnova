
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Allow public read access to usernames for signup validation, but not listing all users.
    // Allow users to create their own user document and read/update it.
    match /users/{userId} {
      allow create: if request.auth != null && request.auth.uid == userId;
      allow read, update: if request.auth != null && request.auth.uid == userId;
      // Allow unauthenticated users to check if a username exists
      allow list: if request.auth == null;
    }

    // Admins can read/write anything
    match /admins/{userId} {
        allow read: if get(/databases/$(database)/documents/admins/$(request.auth.uid)).data.role == 'admin';
        allow write: if get(/databases/$(database)/documents/admins/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Tournaments can be read by any authenticated user, but only written by admins.
    match /tournaments/{tournamentId} {
        allow read: if request.auth != null;
        allow write: if get(/databases/$(database)/documents/admins/$(request.auth.uid)).data.role == 'admin';
    }

    // Registrations can be created by any authenticated user.
    // They can be read by the user who created them or by an admin.
    // They can only be updated/deleted by an admin.
    match /registrations/{registrationId} {
        allow create: if request.auth != null;
        allow read: if request.auth != null && (resource.data.user_id == request.auth.uid || get(/databases/$(database)/documents/admins/$(request.auth.uid)).data.role == 'admin');
        allow update, delete: if get(/databases/$(database)/documents/admins/$(request.auth.uid)).data.role == 'admin';
    }

    // Match results can be read by anyone (for leaderboards).
    // They can only be written by admins.
    match /matches/{matchId} {
        allow read: if true;
        allow write: if get(/databases/$(database)/documents/admins/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Games can be read by anyone but only written by admins
    match /games/{gameId} {
        allow read: if true;
        allow write: if get(/databases/$(database)/documents/admins/$(request.auth.uid)).data.role == 'admin';
    }

  }
}
