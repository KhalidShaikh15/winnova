rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper to check admin status
    function isAdmin() {
      return request.auth != null &&
             exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }

    // ===== DEFAULT DENY =====
    match /{document=**} {
      allow read, write: if false;
    }

    // ===== USERS =====
    match /users/{userId} {
      // Signed-in user can fully manage their own profile
      allow read, update, delete: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null && request.auth.uid == userId;
      // Admin can read/write anyone's profile
      allow read, write: if isAdmin();
    }

    // ===== GAMES (Public Read) =====
    match /games/{gameId} {
      allow read: if true;              // Public can view
      allow write: if isAdmin();
    }

    // ===== TOURNAMENTS (Public Read, Logged-in Write for registration) =====
    match /tournaments/{tournamentId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // ===== MATCHES (Public Read for Leaderboard) =====
    match /matches/{matchId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // ===== REGISTRATIONS =====
    match /registrations/{registrationId} {
      // Any logged-in user can create their own registration
      allow create: if request.auth != null && request.resource.data.user_id == request.auth.uid;
      // User can read their own registration or admin can read all
      allow read: if isAdmin() ||
                   (request.auth != null && request.auth.uid == resource.data.user_id);
      // Admin can update/delete
      allow update, delete: if isAdmin();
    }

    // ===== RESULTS (Public Read for Leaderboard) =====
    match /results/{resultId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // ===== LEADERBOARD =====
    match /leaderboard/{entryId} {
      allow read: if true; // Publicly viewable
      allow write: if isAdmin();
    }

    // ===== PAYOUTS (Admin Only) =====
    match /payouts/{payoutId} {
      allow read, write: if isAdmin();
    }

    // ===== ADMINS (Private) =====
    match /admins/{adminId} {
      allow read: if request.auth != null && request.auth.uid == adminId;
      allow write: if false; // Managed only via console/server
    }
  }
}
