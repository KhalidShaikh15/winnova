rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper: check if user is admin
    function isAdmin() {
      return request.auth != null &&
             exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }

    // ===== DEFAULT DENY =====
    match /{document=**} {
      allow read, write: if false;
    }

    // ===== USERS =====
    match /users/{userId} {
      // Create: user can create their own profile, or admin can create for anyone
      allow create: if request.auth != null &&
                    (request.auth.uid == userId || isAdmin());
      // Read/Update/Delete: only owner or admin
      allow read, update, delete: if request.auth != null && request.auth.uid == userId;
      // Admin can read/write any profile
      allow read, write: if isAdmin();
    }

    // ===== GAMES =====
    match /games/{gameId} {
      allow read: if true;        // Public read
      allow write: if isAdmin();  // Admin edit
    }

    // ===== TOURNAMENTS =====
    match /tournaments/{tournamentId} {
      allow read: if true;        // Public read for anyone
      allow write: if isAdmin();  // Only admin can create/edit
    }

    // ===== MATCHES =====
    match /matches/{matchId} {
      allow read: if true;        // Public read for leaderboard
      allow write: if isAdmin();
    }

    // ===== REGISTRATIONS =====
    match /registrations/{registrationId} {
      // Only logged-in users can register themselves
      allow create: if request.auth != null &&
                    request.resource.data.user_id == request.auth.uid;
      // Read: only owner or admin
      allow read: if isAdmin() ||
                  (request.auth != null && request.auth.uid == resource.data.user_id);
      // Update/Delete: admin only
      allow update, delete: if isAdmin();
    }

    // ===== RESULTS =====
    match /results/{resultId} {
      allow read: if true;        // Public leaderboard
      allow write: if isAdmin();
    }

    // ===== LEADERBOARD =====
    match /leaderboard/{entryId} {
      allow read: if true;        // Public read
      allow write: if isAdmin();
    }

    // ===== PAYOUTS =====
    match /payouts/{payoutId} {
      allow read, write: if isAdmin();
    }

    // ===== ADMINS =====
    match /admins/{adminId} {
      allow read, write: if false; // Fully private
    }
  }
}
