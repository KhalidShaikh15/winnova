rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isAdmin() {
      return request.auth != null &&
             exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }

    // ===== DEFAULT DENY =====
    match /{document=**} {
      allow read, write: if false;
    }

    // ===== USERS =====
    match /users/{userId} {
      // Allow signed-in users to create their own doc
      allow create: if request.auth != null && (request.auth.uid == userId || isAdmin());
      // Allow users to manage their own profile
      allow read, update, delete: if request.auth != null && request.auth.uid == userId;
      // Admin can read/write any profile
      allow read, write: if isAdmin();
    }

    // ===== GAMES (Public Read) =====
    match /games/{gameId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // ===== TOURNAMENTS =====
    match /tournaments/{tournamentId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // ===== MATCHES (Public Read for Leaderboard) =====
    match /matches/{matchId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // ===== REGISTRATIONS =====
    match /registrations/{registrationId} {
      // Create: must be logged in and creating own registration
      allow create: if request.auth != null &&
                    request.resource.data.user_id == request.auth.uid;
      // Read: owner or admin
      allow read: if isAdmin() ||
                  (request.auth != null && request.auth.uid == resource.data.user_id);
      // Admin can update/delete
      allow update, delete: if isAdmin();
    }

    // ===== RESULTS (Public Read) =====
    match /results/{resultId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // ===== LEADERBOARD =====
    match /leaderboard/{entryId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // ===== PAYOUTS =====
    match /payouts/{payoutId} {
      allow read, write: if isAdmin();
    }

    // ===== ADMINS =====
    match /admins/{adminId} {
      allow read, write: if false;
    }
  }
}
